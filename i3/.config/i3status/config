general {
        output_format = "i3bar"
        colors = true
        interval = 1
}

#order += "tztime local"
order += "tztime berlin"

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}
